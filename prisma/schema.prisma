generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // relationMode = "prisma"
}

// Home Page Images 
model Homepage {
  id    Int    @id @default(autoincrement())
  image String @db.VarChar(50)

  @@map("homepage")
}
// End

// New user registration Model
model Credentials {
  id        Int      @id @default(autoincrement())
  firstname String   @db.VarChar(20)
  lastname  String   @db.VarChar(20)
  email     String   @db.VarChar(50)
  password  String   @db.VarChar(500)
  createdon DateTime @default(now())

  @@map("customers")
}

// All products
model Products {
  id          Int         @id @default(autoincrement())
  category_id Int         @db.Int
  name        String      @db.VarChar(200)
  sku         String      @db.VarChar(50)
  price       Int         @db.Int
  description String      @db.Text
  image       String      @db.VarChar(50)
  category    Category    @relation(fields: [category_id], references: [id])
  Cartitems   Cartitems[]
  wishlist    Wishlist[]

  @@map("all_products")
}

// End

// Product Category
model Category {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(50)
  slug     String     @db.VarChar(50)
  heading  String     @db.VarChar(100)
  intro    String     @db.Text
  image    String     @db.VarChar(50)
  products Products[]

  @@map("categories")
}

// End

// Customer Profile
model Customerprofile {
  id             Int     @id @default(autoincrement())
  firstname      String  @db.VarChar(20)
  lastname       String  @db.VarChar(20)
  email          String  @db.VarChar(50)
  addresslineone String  @db.VarChar(100)
  addresslinetwo String? @db.VarChar(100)
  country        String  @db.VarChar(50)
  state          String  @db.VarChar(50)
  city           String  @db.VarChar(40)
  phonenumber    Int     @db.Int
  pincode        Int     @db.Int

  @@map("customer_profile")
}

// End

// Countries
model Countries {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(50)

  @@map("countries")
}

// End

// State
model Indianstates {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(50)

  @@map("indian_states")
}

// End

// Contact Us Model
model Userquery {
  id        Int    @id @default(autoincrement())
  firstname String @db.VarChar(20)
  lastname  String @db.VarChar(20)
  email     String @db.VarChar(50)
  subject   String @db.VarChar(50)
  message   String @db.VarChar(500)

  @@map("contact_us")
}

// End

// CartItems Model
model Cartitems {
  id        Int      @id @default(autoincrement())
  productid Int      @db.Int
  sku       String   @db.VarChar(50)
  quantity  Int?     @db.Int
  sessionid String @db.VarChar(200)
  products  Products @relation(fields: [productid], references: [id])

  @@map("cart_items")
}

// End

// Wishlist Model
model Wishlist {
  id        Int      @id @default(autoincrement())
  productid Int      @db.Int
  sku       String?   @db.VarChar(50)
  quantity  Int?     @db.Int
  sessionid String @db.VarChar(200)
  products  Products @relation(fields: [productid], references: [id])

  @@map("wishlist_items")
}
